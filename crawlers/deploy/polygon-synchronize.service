[Unit]
Description=Polygon block with transactions synchronizer
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/moonstream/crawlers/mooncrawl
EnvironmentFile=/home/ubuntu/moonstream-secrets/app.env
ExecStart=/home/ubuntu/moonstream-env/bin/python -m mooncrawl.crawler blocks synchronize --blockchain polygon -c 50 -j 1
SyslogIdentifier=polygon-synchronize

[Install]
WantedBy=multi-user.target